{
  "expo": {
    "name": "aborda",
    "slug": "aborda",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aborda.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Pour ajouter des photos Ã  vos Trips et enrichir votre journal de bord.",
        "NSCameraUsageDescription": "Pour prendre des photos de vos Cartes d'Embarquement et de vos voyages."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#2563EB"
      },
      "package": "com.aborda.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-asset",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "62abcb14-477b-4fec-8471-18949cfb2469"
      }
    }
  }
}
