  LayoutAnimation,
  Modal,
  Platform,
  ScrollView,
  StyleSheet,
  Text,
  TouchableOpacity,
  UIManager,
  View
} from 'react-native';
import { BoardingPassCard } from '../utils/BoardingPassCard.js';
import { formatDistance } from '../utils/distanceCalculator.js';

if (Platform.OS === 'android' && UIManager.setLayoutAnimationEnabledExperimental) {
  UIManager.setLayoutAnimationEnabledExperimental(true);
}

export const FlightsScreen = ({ boardingPasses }) => {
  const [searchQuery, setSearchQuery] = useState('');
  const [selectedBoardingPass, setSelectedBoardingPass] = useState(null);
  const [showDetailModal, setShowDetailModal] = useState(false);
  const [expandedCard, setExpandedCard] = useState(null);
  
  // Filtrer les vols selon la recherche
  const filteredFlights = boardingPasses.filter((bp) => {
    const query = searchQuery.toLowerCase();
    return (
      bp.airline.toLowerCase().includes(query) ||
      bp.flightNumber.toLowerCase().includes(query) ||
      bp.origin.toLowerCase().includes(query) ||
      bp.destination.toLowerCase().includes(query) ||
      bp.passengerName.toLowerCase().includes(query)
    );
  });

  const handleCardPress = (boardingPass) => {
    setSelectedBoardingPass(boardingPass);
    setShowDetailModal(true);
  };

  const toggleCardExpansion = (cardId) => {
    LayoutAnimation.configureNext(LayoutAnimation.Presets.easeInEaseOut);
    setExpandedCard(expandedCard === cardId ? null : cardId);
  };

  const totalKm = boardingPasses.reduce((sum, bp) => sum + (bp.distanceKm || 0), 0);
  const averageKm = boardingPasses.length > 0 ? Math.round(totalKm / boardingPasses.length) : 0;

  return (
    <View style={styles.container}>
      {/* Header */}
      <View style={styles.header}>
        <Text style={styles.headerTitle}>Mes Vols</Text>
      </View>

        <View style={styles.selectionCounter}>
          <Text style={styles.counterText}>{formatDistance(totalKm)} km parcourus</Text>
        </View>

      {/* Liste des vols */}
      <ScrollView style={styles.flightsList} showsVerticalScrollIndicator={false} contentContainerStyle={styles.stackContainer}>
        {filteredFlights.length === 0 ? (
          <View style={styles.emptyState}>
            <Text style={styles.emptyStateTitle}>
              {searchQuery ? 'Aucun résultat' : 'Aucun vol pour l\'instant'}
            </Text>
            <Text style={styles.emptyStateSubtitle}>
              {searchQuery
                ? 'Essayez une autre recherche'
                : 'Scannez votre première carte d\'embarquement'}
            </Text>
          </View>
        ) : (
              <View style={styles.cardsStack}>
      {filteredFlights.map((bp, index) => {
        const isExpanded = expandedCard === bp.id;
        
        // Calculer le décalage vertical - les cartes s'empilent vers le BAS
        const stackOffset = index * (-50); // 80px de décalage par carte
        const zIndex = filteredFlights.length - index; // Les premières cartes sont au-dessus
        
        return (
          <View
            key={bp.id}
            style={[
              styles.stackedCardContainer,
              {
                top: stackOffset,
                zIndex: isExpanded ? 9999 : zIndex, // Carte expandée toujours au-dessus
              }
            ]}
          >
            <TouchableOpacity
              activeOpacity={1}
              onPress={() => toggleCardExpansion(bp.id)}
              onLongPress={() => handleCardPress(bp)}
            >
              <BoardingPassCard
                boardingPass={bp}
                onPress={() => handleCardPress(bp)}
                style={isExpanded ? styles.expandedCard : null}
              />
            </TouchableOpacity>
          </View>
        );
      })}
    </View>
  )}
</ScrollView>

      {/* Modal de détail */}
      <Modal
        visible={showDetailModal}
        animationType="slide"
        transparent={true}
        onRequestClose={() => setShowDetailModal(false)}
      >
        <View style={styles.modalOverlay}>
          <View style={styles.modalContent}>
            <TouchableOpacity
              style={styles.modalClose}
              onPress={() => setShowDetailModal(false)}
            >
              <Text style={styles.modalCloseText}>✕</Text>
            </TouchableOpacity>

            {selectedBoardingPass && (
              <>
                <Text style={styles.modalTitle}>Détails du Vol</Text>

                <View style={styles.modalSection}>
                  <Text style={styles.modalLabel}>Passager</Text>
                  <Text style={styles.modalValue}>
                    {selectedBoardingPass.passengerName}
                  </Text>
                </View>

                <View style={styles.modalSection}>
                  <Text style={styles.modalLabel}>Compagnie & Vol</Text>
                  <Text style={styles.modalValue}>
                    {selectedBoardingPass.airline} {selectedBoardingPass.flightNumber}
                  </Text>
                </View>

                <View style={styles.modalSection}>
                  <Text style={styles.modalLabel}>Trajet</Text>
                  <Text style={styles.modalValue}>
                    {selectedBoardingPass.origin} → {selectedBoardingPass.destination}
                  </Text>
                </View>

                <View style={styles.modalSection}>
                  <Text style={styles.modalLabel}>Date de Vol</Text>
                  <Text style={styles.modalValue}>{selectedBoardingPass.date}</Text>
                </View>

                <View style={styles.modalRow}>
                  <View style={[styles.modalSection, { flex: 1 }]}>
                    <Text style={styles.modalLabel}>Siège</Text>
                    <Text style={styles.modalValue}>
                      {selectedBoardingPass.seatNumber}
                    </Text>
                  </View>
                  <View style={[styles.modalSection, { flex: 1 }]}>
                    <Text style={styles.modalLabel}>Classe</Text>
                    <Text style={styles.modalValue}>
                      {selectedBoardingPass.travelClass}
                    </Text>
                  </View>
                </View>

                <View style={styles.modalSection}>
                  <Text style={styles.modalLabel}>Code de Réservation</Text>
                  <Text style={styles.modalValue}>{selectedBoardingPass.pnr}</Text>
                </View>

                <TouchableOpacity
                  style={styles.modalButton}
                  onPress={() => setShowDetailModal(false)}
                >
                  <Text style={styles.modalButtonText}>Fermer</Text>
                </TouchableOpacity>
              </>
            )}
          </View>
        </View>
      </Modal>
    </View>
  );
};

